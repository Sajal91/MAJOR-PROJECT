<% layout('Layouts/boilerplate.ejs') -%>
<% if(noUser) { %>
    <div class="alert alert-danger alert-dismissible fade show col-8 offset-2" role="alert">
        <b><%=noUser%></b>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if(noNewListing) { %>
    <div class="alert alert-danger alert-dismissible fade show col-8 offset-2" role="alert">
        <b><%=noNewListing%></b>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if(noUpdateListing) { %>
    <div class="alert alert-danger alert-dismissible fade show col-8 offset-2" role="alert">
        <b><%=noUpdateListing%></b>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if(noDeleteListing) { %>
    <div class="alert alert-danger alert-dismissible fade show col-8 offset-2" role="alert">
        <b><%=noDeleteListing%></b>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if(noReview) { %>
    <div class="alert alert-danger alert-dismissible fade show col-8 offset-2" role="alert">
        <b><%=noReview%></b>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if(noDeleteReview) { %>
    <div class="alert alert-danger alert-dismissible fade show col-8 offset-2" role="alert">
        <b><%=noDeleteReview%></b>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<body>
    <h2 style="margin-top: 8rem;" id="newListing-heading">Login Form</h2>
    <form style="margin-bottom: 10rem;" id="newListing-form" action="http://localhost:3000/login" class="row g-3 needs-validation" novalidate method="post">

        <div class="form-floating col-md-12 mb-3">
            <input type="text" name="username" class="form-control" placeholder="" id="usernameInput" required>
            <label for="usernameInput" class="form-label">Username</label>
            <div class="invalid-feedback">Invalid Username</div>
        </div>
        
        <div class="form-floating col-md-12 mb-3">
            <input type="password" name="password" class="form-control" placeholder="" id="passwordInput" required>
            <label for="passwordInput" class="form-label">Password</label>
            <div class="invalid-feedback">Invalid Password</div>
        </div>

        <div class="col-12">
            <button style="font-weight: 700;" type="submit" class="btn btn-danger">Login</button>
        </div>
    </form>
</body>